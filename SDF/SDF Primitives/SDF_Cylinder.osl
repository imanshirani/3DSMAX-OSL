shader SDF_Cylinder(
    point Position = P,
    float Height = 2.0,
    float Radius = 0.5,

    output float SDF_Out = 0.0
)
{
    
    
    vector d = abs(vector(length(vector(Position[0], Position[2], 0.0)), Position[1], 0.0)) - vector(Radius, Height / 2.0, 0.0);

    
    float outside_dist = length(max(d, 0.0));
    float inside_dist = min(max(d[0], d[1]), 0.0);
    
    SDF_Out = outside_dist + inside_dist;
}