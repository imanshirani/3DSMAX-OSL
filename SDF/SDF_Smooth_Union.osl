shader SDF_Smooth_Union(
    float SDF_A = 0.0,
    float SDF_B = 0.0,
    
   
    float Smoothness = 0.2,

    output float SDF_Out = 0.0
)
{
    
    float h = clamp(0.5 + 0.5 * (SDF_B - SDF_A) / Smoothness, 0.0, 1.0);
    SDF_Out = mix(SDF_B, SDF_A, h) - Smoothness * h * (1.0 - h);
}